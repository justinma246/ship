blue-color = #0092BC
dark-blue = #4E86A2
grey = #0D5B71
	
#div1
	padding: 2%
	visibility: hidden
	bottom: 3%
	right: 7%
	width: 50%
	height: 20%
	background: white
	position: absolute
	opacity: .5
	border-radius: 10px
	
.ship
	top: 2%
	left: 2%
	position: absolute
	color: white
	font-family: Courier New
	font-weight: bold
	font-size: 40px

.help
	bottom: 2%
	right: 2%
	position: absolute
	font-family: Courier New
	font-weight: bold
	text-align: center
	opacity: .3
	font-size: 30px
	background: white
	border-radius: 50%;
	width: 40px;
	height: 40px; 
	color: black
	
.help:hover
	opacity: .6
	color: blue-color
	cursor: pointer

.signUp
	width: 20%
	padding: None
	top: 50%
	left: 50%
	position: absolute
	transform: translate(-50%, -50%);
	
.logo
	width: 90%
	padding-bottom: 10%
	position: relative
	
.button
	background: dark-blue
	text-align: center
	color: white
	width: 100%
	padding: 15px 32px
	display: inline-block
	text-decoration: None
	font-family: Sans-serif
	position: relative
	border-radius: 10px

	
.button:visited
	color: white
	
.button:hover
	text-decoration: None
	background: grey
	color: white
	cursor: pointer
	